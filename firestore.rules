rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow the authenticated owner full access to their own data tree.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Ensure recursive access for all nested collections (entries, config, etc.)
      match /{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global deny for non-owned or non-authenticated paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}